@model IEnumerable<WebApplication8.Models.ListUsersViewModel>
@{

    Layout = "~/Views/Shared/_Layout - Temp - Table.cshtml";
}
@{
    ViewBag.Title = "ListOfUsers";
}
<style>
    .inner {
        vertical-align: middle;
        margin-right: 20px;
        padding: 3px 5px;
    }
</style>

<h2>List Of Users</h2>

<p>
    @Html.ActionLink("Create New", "RegisterMultiRoles")
</p>


<table class="table table-striped table-bordered table-hover" id="dataTables-example">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRoles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEnabled)
            </th>

            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>

                @{
                    foreach (string s in item.UserRolesList)
                    {
                        @Html.Raw(s);
                        @Html.Raw(" , ");
                    }
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>


            <td>
               @{ 
                   if (item.IsEnabled == true)
                   {
                      @Html.Raw("Enable")
                   }
                   else
                   {
                       @Html.Raw("Block")                   }


                   }
            </td>
            <td>
                @Html.ActionLink("Edit", "EditRegisterMultiRoles", new { id = item.UserName })|
                @Html.ActionLink("Reset Password", "ResetPasswordCust", new { id = item.UserName })
                @*@Html.ActionLink("Edit", "Edit1", new { id = item.UserName }) |*@
                @*@Html.ActionLink("Details","Register", "DetailsRegister", new { id = item.UserName }) |*@

            </td>
        </tr>
        }
    </tbody>
</table>


@section Scripts {

    @Scripts.Render("~/bundles/jquery")



    <script>


        $(document).ready(function () {
            $('#dataTables-example').dataTable({
                "order": [0, "desc"]
            });
        });


    </script>

}

