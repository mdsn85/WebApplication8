@using (Html.BeginForm(null, null, FormMethod.Get, new { id = "SearchForm" }))
{
    <!-- START SEARCH -->
    <div class="panel panel-default">
        <div class="panel-body">



            <div class="input-group push-down-4 inner col-md-2" style="float:left">
                <span class="input-group-addon"><span class="fa fa-search"></span></span>
                <input type="text" name="SearchCode" class="form-control" placeholder="LPO Code..." value="@ViewBag.SearchCode" />

            </div>




            <div class="input-group push-down-4 inner col-md-2" style="float:left;padding-left:5px">
                <span class="input-group-addon"><span class="fa fa-search"></span></span>
                @Html.DropDownList("StatusId", null, "status ...", htmlAttributes: new { @class = " form-control selectpicker", @Name = "StatusId", @Id = "StatusId" })
            </div>


            <div class="input-group push-down-4 inner col-md-2" style="float:left;padding-left:5px">
                <span class="input-group-addon"><span class="fa fa-search"></span></span>
                @Html.DropDownList("supplierId", null, "supplier ...", htmlAttributes: new { @class = " form-control selectpicker", @Name = "supplierId", @Id = "supplierId" })
            </div>


            <div class="form-group  push-down-4 inner col-md-3"  style="float:left;padding-left:30px">
 
                <div class="input-group date form_date " data-date="" data-date-format="dd MM yyyy" data-link-field="StartDate" data-link-format="yyyy-mm-dd" >
                    <input class="form-control" size="5" type="text" value="@ViewBag.StartDate" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <input type="hidden" id="StartDate" name="StartDate" value="@ViewBag.StartDate" /><br />
            </div>

            <div class="form-group  push-down-4 inner col-md-3" style="float:left;padding-left:30px">

                <div class="input-group date form_date " data-date="" data-date-format="dd MM yyyy" data-link-field="EndDate" data-link-format="yyyy-mm-dd">
                    <input class="form-control" size="6" type="text" value="@ViewBag.EndDate" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <input type="hidden" id="EndDate" name="EndDate" value="@ViewBag.EndDate" /><br />
            </div>


            <div class="input-group-btn" style="float:left;padding-left:30px">
                <button class="btn btn-primary">Search</button>

            </div>

        </div>
    </div>
    <!-- END SEARCH -->
}


<table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.code)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.LpoStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierRef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LpoDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Supplier.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditTermSupplier.Name)
            </th>




            <th>
                @Html.DisplayNameFor(model => model.SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vat)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.GrandTotal)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.UserCreate)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.StampDate)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.LpoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LpoNature)
            </th>
            <th> 
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LpoStatus.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierRef)
            </td>
            <td NOWRAP>@item.LpoDate.ToString("dd-MMM-yyyy")</td>

            <td>
                @Html.DisplayFor(modelItem => item.Supplier.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CreditTermSupplier.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTotal)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Vat)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.GrandTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserCreate)
            </td>
            <td hidden>
                @{
                    DateTime a = item.StampDate ?? new DateTime(1900, 1, 1);
                }
                @Html.Raw(a.Ticks)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.LpoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LpoNature.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>


                @Html.ActionLink("Print", "PrintNewTable", new { id = item.LpoId }) |
                @Html.ActionLink("Print With LH", "PrintNewTableWithLetterHead", new { id = item.LpoId }) |

                @Html.ActionLink("Revised", "Revised", new { id = item.LpoId })
                @Html.Raw("|")





                @Html.ActionLink("Details", "Details", new { id = item.LpoId })|

                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.LpoId })
                    @Html.Raw("|")
                }
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <!-- DATA TABLE SCRIPTS -->

    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable({
                "order": [12, "desc"]
            });


        });

        $(function () {
            var table = $('#dataTables-example').dataTable();
            $("#btnExport").click(function (e) {
                e.preventDefault();
                window.open('data:application/vnd.ms-excel,' +
                    encodeURIComponent(table[0].outerHTML));
            });
        });

    </script>
}