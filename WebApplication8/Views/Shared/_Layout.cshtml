<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="http://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("High Moon", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Material", "Index", "Materials")</li>
                    <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                    <li>@Html.ActionLink("Cutting Sheets", "Index", "CuttingSheets")</li>
                    <li>@Html.ActionLink("LPO", "Index", "Lpoes")</li>
                    <li>@Html.ActionLink("Credit Terms", "Index", "CreditTerms")</li>
                    <li>@Html.ActionLink("Unit", "Index", "units")</li>
                    <li>@Html.ActionLink("Stock Issue", "Index", "StockIssues")</li>




                    <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                    <li>@Html.ActionLink("SalesMen", "Index", "SalesMen")</li>

                    <li>@Html.ActionLink("Designers", "Index", "Designers")</li>

                    <li>@Html.ActionLink("Sales Types", "Index", "SalesTypes")</li>

                    <li>@Html.ActionLink("Customer Types", "Index", "CustomersTypes")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    @*<script src="http://code.jquery.com/jquery-3.1.1.slim.min.js"></script>*@

    <script src="~/Scripts/js/shortcutKey/jquery.keyboard-shortcuts.js"></script>
    <script type="text/javascript">
        (function (code) {
            code(window.jQuery, document, window);
        }(function ($, document, window) {
            $(function () {
                $(window)
                    .initKeyboard({ debug: 1 })
                    .on('Shift+▲', function () {
                        alert('Shift+▲');
                    }).on('Shift+▼', function () {
                        $('#window').attr('class', 'h-50 p-b');
                    }).on('Shift+◀', function () {
                        $('#window').attr('class', 'w-50');
                    }).on('F1', function () {
                        openChildMaterial();

                    }).on('F3', function () {
                        openChildLPO();
                    }).on('F4', function () {
                        openChildStock();
                    }).on('F5', function () {
                        openChildWraehouse();
                    }).on('F6', function () {
                        openChildUnits();
                    }).on('F7', function () {
                        openChildSupplier();
                    }).on('F2', function () {
                        openChildCuttingSheet();
                    }).on('F8', function () {
                openChildProject();
            });
            });
        }));
    </script>
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-36251023-1']);
        _gaq.push(['_setDomainName', 'jqueryscript.net']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();



        function openChildMaterial() {
            showModalPopUp1('/Materials/create');

        }

        function openChildLPO() {
            showModalPopUp1('/Lpoes/Index');

        }

        function openChildStock() {
            showModalPopUp1('/StockIssues/Index');

        }

        function openChildWraehouse() {
            showModalPopUp1('/Warehouses/Index');

        }

        function openChildUnits() {
            showModalPopUp1('/Units/Index');

        }
        function openChildSupplier() {
            showModalPopUp1('/Suppliers/Index');

        }
        function openChildCuttingSheet() {
            showModalPopUp1('/CuttingSheets/Index');

        }

        function openChildProject() {
            showModalPopUp1('/Projects/Index');

        }
        
    </script>

    <script type="text/javascript">

        var popUpObj;

        function showModalPopUp1(url) {

            popUpObj = window.open(url,

                //"ModalPopUp",

                //"toolbar=no," +

                //"scrollbars=no," +

                "location=no," +

                "statusbar=no," +

                "menubar=no," +

                "resizable=0," +

                "width=800," +

                "height=400," +

                "left = 490," +

                "top=300"

            );

            popUpObj.focus();

            LoadModalDiv();

        }

    </script>
</body>
</html>
